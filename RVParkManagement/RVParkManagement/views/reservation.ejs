        }

        .dashboard-option p {
            color: #666;
            margin-bottom: 20px;
        }

        .dashboard-option a {
            background-color: #007bff;
            border: none;
            border-radius: 3px;
            color: #fff;
            display: inline-block;
            padding: 10px 20px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .dashboard-option a:hover {
            background-color: #0056b3;
        }

        footer {
            background-color: #333;
            color: #fff;
            padding: 10px;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>

